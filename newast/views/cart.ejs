<% layout('layouts/boilerplate') %>


<div class="card" style="width: 18rem;">
  <img src="<%-param.image%>" class="card-img-top" alt="error">
  <div class="card-body">
    <h5 class="card-title"><%-param.name%></h5>
  </div>
  <ul class="list-group list-group-flush">
    <li class="list-group-item ml-4"><%-param.price%></li>
    <a href="/contact/<%- param._id%>" class="btn btn-info mt-2" >contact seller</a>
</ul>

  <div class="card-body">
    <a href="/buyer" class="btn btn-primary">remove</a>
    <a  href="/buyer" id="alertButton" class="btn btn-primary">add to watch list</a>
    <div class="mt-2">
      <a href="/buynow" class="btn btn-primary">buy now</a>
      <form class="d-inline" action="/buyer/<%=param._id%>?_method=DELETE" method="POST">
            <button class="btn btn-danger">Delete</button>
        </form>
    </div>
  </div>
</div>
    <script>
        document.getElementById('alertButton').addEventListener('click', function() {
            alert('Added to watchlist!');
        });
    </script>
